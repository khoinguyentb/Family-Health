<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item>
        <shape>
            <solid android:color="#6C5CE7" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#4DFFFFFF" />

            <padding
                android:bottom="0dp"
                android:left="1.5dp"
                android:right="1dp"
                android:top="2dp" />

            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>


    <item>
        <shape>
            <solid android:color="#6C5CE7" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>

</layer-list>
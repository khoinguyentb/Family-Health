<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_stroke_light_blue_gray"
    android:paddingHorizontal="13dp"
    android:paddingTop="13dp"
    android:paddingBottom="80dp"
    android:elevation="12dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto"
        android:text="@string/friend_location"
        android:textColor="@color/black_393939"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_close" />


    <TextView
        android:id="@+id/txtActiveTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="12dp"
        android:text="15:12 12:18:23"
        android:textColor="@color/gray_A3A3A3"
        android:textSize="13sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_clock" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtActiveTime"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="12dp"
        android:text="@string/detail2"
        android:textColor="@color/black_393939"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt3"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_stroke_light_blue_white"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/address"
            android:textColor="@color/gray_AEAEAE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:fontFamily="@font/roboto"
            android:lines="3"
            android:text="7201 E Green Lake D N Seattle, WA 98115 United States"
            android:textColor="@color/blue_049DEF"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/coordinates"
            android:textColor="@color/gray_AEAEAE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtCoordinate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:fontFamily="@font/roboto"
            android:text="21.02925°B,105.763847°D"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>

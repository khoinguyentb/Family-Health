<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginBottom="14dp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imgPlace"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_place_1" />

    <TextView
        android:id="@+id/txtPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgPlace"
        android:layout_alignBottom="@+id/imgPlace"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/imgPlace"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/bus_stop"
        android:textColor="#CCFFFFFF"
        android:textSize="14.62sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgPlace"
        android:layout_alignBottom="@+id/imgPlace"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/btnFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/tv_find"
            android:fontFamily="@font/roboto"
            android:textSize="13sp"
            android:padding="2dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/find" />
    </RelativeLayout>
</RelativeLayout>